{
	"name": "potree-core",
	"version": "1.0.7",
	"description": "Potree wrapper for three.js applications",
	"repository": {
		"type": "git",
		"url": "https://github.com/tentone/potree-core.git"
	},
	"main": "build/potree.js",
	"module": "build/potree.module.js",
	"exports": {
		".": {
			"import": "./build/potree.module.js",
			"require": "./build/potree.cjs"
		},
		"./source/*": "./source/*"
	},
	"scripts": {
		"start": "rollup -c rollup.dev.js --watch",
		"build": "rollup -c rollup.config.js",
		"build-wp": "webpack",
		"start-wp": "webpack --watch",
		"serve": "http-server .",
		"docs": "jsdoc -d docs source",
		"pub": "npm run build && npm publish --access public .",
		"lint": "eslint --ext .js source",
		"lint-fix": "eslint --ext .js --fix source"
	},
	"keywords": [
		"three",
		"potree",
		"3d",
		"webgl"
	],
	"author": "Tentone",
	"license": "MIT",
	"peerDependencies": {
		"three": "^0.120.0"
	},
	"devDependencies": {
		"@types/three": "~0.125.0",
		"eslint": "~7.7.0",
		"eslint-plugin-import": "~2.22.0",
		"eslint-plugin-jsdoc": "~30.2.4",
		"http-server": "~14.1.0",
		"jsdoc": "~3.6.10",
		"three": "~0.110.0",
		"webpack": "~5.71.0",
		"webpack-cli": "~4.9.2",
		"webpack-merge": "~5.8.0",
		"webpack-node-externals": "~3.0.0",
		"raw-loader": "~4.0.2"
	}
}
